<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/colorButtonBg</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="header_style">
        <item name="android:textSize">@dimen/header_ts</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
